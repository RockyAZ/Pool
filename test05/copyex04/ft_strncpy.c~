#include <stdio.h>

char	*ft_strncpy(char *dest, char *src, unsigned int n)
{
	unsigned int i;

	i = 0;
	while ((src[i] != '\0') && i < n)
	{
		//printf("tt");
		dest[i] = src[i];
		i++;
		//printf("dd");
	}
	dest[i] = '\0';
	return (dest);
}
